@model server2.Models.BlogPost

<h2>Delete Blog Post</h2>

<p>Are you sure you want to delete this post?</p>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Content</p>
    <p><strong>Created At:</strong> @Model.CreatedAt.ToString("g")</p>
</div>
<p><strong>Post ID:</strong> @Model.Id</p> <!-- Debugging: Display the ID -->

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
